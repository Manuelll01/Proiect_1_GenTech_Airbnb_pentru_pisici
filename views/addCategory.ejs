                <input type="text" id="categoryName" name="categoryName" autocomplete="off" required>
                <label for="categoryName"><i class="fa-solid fa-building-user"></i> Nume de categorie:</label>
                
                <button type="submit">Trimite</button>
            </form>
        </div>
    </div>
